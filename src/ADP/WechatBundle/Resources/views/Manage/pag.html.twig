{% extends 'ADPWechatBundle:Manage:base.html.twig' %}
{% block title %}ADP PAGE{% endblock %}
{% block navpag %}active{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="/source/ckeditor/ckeditor.js"></script>
  <!-- <script src="/source/ckeditor/config.js"></script> -->
{% endblock %}

{% block maincontent %}
<script>
  var pagecode = {
    hosts: "{{host}}",
  }
</script>
<div class="panel panel-default" id="pagmanage">
   <div class="panel-heading">
         Preference
   </div>
   <div class="panel-body">
     <ul class="nav nav-tabs" style="margin-top:20px" id="pagmanagenav">
       <li class="active"><a href="#" active="pagelist" class="message">Page List</a></li>
       <li class=""><a href="#" active="addpage" class="message">Add Page</a></li>
    </ul>
<!-- pagelist -->
   <div id="pagelist" class="navshow">
     <div class="row">
         <div class="col-lg-12">
             <div class="panel panel-default">
                 <div class="panel-heading">
                     PAGE
                 </div>
                 <!-- /.panel-heading -->
                 <div class="panel-body">
                     <div class="table-responsive">
                         <table class="table table-striped table-bordered table-hover" id="pagelisttable">
                             <thead>
                                 <tr>
                                     <th>Page Name</th>
                                     <th>Page Title</th>
                                     <th>Page Link</th>
                                     <th>Editor</th>
                                     <th>Last Modified</th>
                                     <th>Edit</th>
                                     <th>Delete</th>
                                 </tr>
                             </thead>
                             <tbody>
{% for x in list %}
                                 <tr class="odd gradeX" pageid="{{ x.pageid|e }}">
                                     <td>{{ x.pagename|e }}</td>
                                     <th>{{ x.pagetitle|e }}</th>
                                     <th><a target="_blank" href="/article/{{ x.pageid|e }}">{{ host }}/article/{{ x.pageid|e }}</a></th>
                                     <th>{{ x.submiter|e }}</th>
                                     <th>{{ x.edittime|e }}</th>
                                     <td class="center"><i class="fa fa-edit fa-lg"></i></td>
                                     <td class="center"><i class="fa fa-trash-o fa-lg"></i></td>
                                 </tr>
{% endfor %}
                             </tbody>
                         </table>
                     </div>
                     <!-- /.table-responsive -->
                 </div>
                 <!-- /.panel-body -->
             </div>
             <!-- /.panel -->
         </div>
         <!-- /.col-lg-12 -->
     </div>
   </div>
<!-- pagelist end-->
<!-- addpage -->
<div id="addpage">
  <button type="button" class="btn btn-primary pull-right" id="articlesubmit">
     Submit
  </button>
  <div class="form-group">
    <label>PAGE NAME:</label>
    <input class="form-control pagename" placeholder="Enter PAGE NAME" style="width:80%">
  </div>
  <div class="form-group">
    <label>PAGE TITLE:</label>
    <input class="form-control pagetitle" placeholder="Enter PAGE TITLE" style="width:80%">
  </div>
  <textarea name="editor1" id="editor1"></textarea>
</div>
<!-- addpage end-->
</div>
</div>

<!-- popup -->
<div class="modal fade" id="editpage" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
               aria-hidden="true">
            </button>
            <h4 class="modal-title" id="myModalLabel">
               Edit Article
            </h4>
         </div>
         <div class="modal-body">
<!-- add main menu form -->
<div class="form-group">
  <label>PAGE NAME:</label>
  <input class="form-control pagename" placeholder="Enter PAGE NAME" style="width:80%">
</div>
<div class="form-group">
  <label>PAGE TITLE:</label>
  <input class="form-control pagetitle" placeholder="Enter PAGE TITLE" style="width:80%">
</div>
<textarea name="editor2" id="editor2"></textarea>
<!-- add main menu form end  -->
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default"
               data-dismiss="modal">Close
            </button>
            <button type="button" class="btn btn-primary savepagechange">
               SAVE
            </button>
         </div>
      </div><!-- /.modal-content -->
   </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- popup end -->
  <script>
    window.onload = function() {
        var config = {
          language : 'en',
          filebrowserImageUploadUrl: '/outapi/ckeditoruploadimage/',
          image_previewText: 'your image',
        };
        CKEDITOR.replace( 'editor1', config);
        CKEDITOR.replace( 'editor2', config);
    };
    $(document).ready(function() {
        $('#pagelisttable').dataTable();
    });
</script>
{% endblock %}
