{% extends 'ADPWechatBundle:Manage:base.html.twig' %}
{% block title %}Preference{% endblock %}

{% block maincontent %}
<div class="panel panel-default" id="preference">
   <div class="panel-heading">
         Preference
   </div>
   <div class="panel-body">
     <ul class="nav nav-tabs" style="margin-top:20px" id="preferencenav">
       <li class=""><a href="#" active="changepwd" class="message">Change Password</a></li>
{% if admin %}
       <li class=""><a href="#" active="usermanage" class="message">User Manage</a></li>
{% endif %}
     </ul>
     <!-- changepwd -->
    <div id="changepwd">
      <br>
      <div class="form-group">
          <label>Old Password</label>
          <input class="form-control" placeholder="Enter Old Password" style="width:50%">
      </div>
      <div class="form-group">
          <label>New Password</label>
          <input class="form-control" placeholder="Enter New Password" style="width:50%">
      </div>
      <div class="form-group">
          <label>Repeat New Password</label>
          <input class="form-control" placeholder="Repeat New Password" style="width:50%">
      </div>
      <hr>
      <div>
        <button type="button" class="btn btn-primary save">
           SAVE
        </button>
      </div>
    </div>
     <!-- changepwd end-->
     <!-- usermanage -->
    <div id="usermanage">
      <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      TAG LIST
                  </div>
                  <!-- /.panel-heading -->
                  <div class="panel-body">
                      <div class="table-responsive">
                          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                              <thead>
                                  <tr>
                                      <th>User Name</th>
                                      <th>Edit</th>
                                      <th>Delete</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <tr class="odd gradeX">
                                      <td>Trident</td>
                                      <td class="center"><i class="fa fa-edit fa-lg"></i></td>
                                      <td class="center"><i class="fa fa-trash-o fa-lg"></i></td>
                                  </tr>

                              </tbody>
                          </table>
                      </div>
                      <!-- /.table-responsive -->
                  </div>
                  <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
          </div>
          <!-- /.col-lg-12 -->
      </div>
      <div style="text-align:center;" id="menufun">
        <button type="button" class="btn btn-primary adduser">Add User</button>
      </div>
    </div>
     <!-- usermanage end-->
  </div>
</div>

<script>
$(document).ready(function() {
    $('#dataTables-example').dataTable();
});
</script>
{% endblock %}
